<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/style-save.css">
    <title>Document</title>
</head>
<body>
    <nav>
        <%- include('./partials/nav') %>
        <a href="/locations">Return to Homepage</a>
    </nav>
    <h1>Saved Locations</h1>
    <% for( let i = 0; i < user[0].savedLocations.length; i++ ) { %>
      <div>
        <a href=""><p><%= user[0].savedLocations[i].locationsName %></p></a>
        <div class="addRemove">
          <a href=""><button class="view btn">View your Plans</button></a>
          <form action="/locations/update/<%= user[0].savedLocations[i]._id %>?_method=PUT" method="POST">
            <input type="submit" value="Remove" class="remove btn btn-danger">
          </form>
        </div>
      </div>
   <% } %>

  <%- include('./partials/footer') %>
